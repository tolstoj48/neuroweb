<% layout('layouts/index') %>
  <div class="container d-flex justify-content-center align-items-center mt-2">
    <div class="row col-12">
      <h1 id="title" class="mt-2 mb-3">Upload a file for the annotation</h1>
      <div class="content col-md-8 offset-md-2 col-xl-6 offset-xl-3">
        <div class="card shadow">
          <div class="card-body">
            <div class="mt-3">
              <form id="upload-form" class="needs-validation" enctype="multipart/form-data" action="/upload-data"
                method="POST" novalidate>
                <div class="input-group mb-5">
                  <input type="file" class="form-control" name="analysis" id="file"
                    aria-describedby="inputGroupFileAddon04" aria-label="Upload" accept=".vcf" required>
                  <button class="btn btn-outline-success">Upload the file</button>
                </div>
                <!-- Spinner div -->
                <div id="loading-overlay">
                  <div id="spinner"></div>
                </div>
                <div id="fetch-result"></div>
              </form>
              <div class="mt-5 fs-6 border-top fw-lighter">
                <p class="mt-2">* Maximum size of the file: <%= fileS / 1000000 %>MB</p>
                <p> ** Allowed files: <%= allowedFiles %> with separator "," and encodings utf-8.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<div class="container d-flex justify-content-center align-items-center">
  <div class="row col-12">
    <div class="col-md-8 offset-md-2 col-xl-6 offset-xl-3">
      <div class="card shadow">
        <div class="card-body">
          <div class="d-flex flex-column">
            <div class="ms-5">
              <form class="" action="/in-house-db/search/" method="GET">
                <div class="row justify-content-center">
                  <div class="form-group row">
                    <input class="col-6 me-3" type="search" id="searchGnomen" name="searchGnomen" placeholder="gNomen"
                      maxlength="200">
                    <button id="searchGnomenBtn" class="btn btn-outline-primary col-5 strong">Search gNomen</button>
                  </div>
                </div>
              </form>
            </div>
            <div class="ms-5">
              <form class="mt-3" action="/in-house-db/search" method="GET">
                <div class="row justify-content-center">
                  <div class="form-group row">
                    <input class="col-6 me-3" type="search" id="searchGeneRefGene" name="searchGeneRefGene"
                      placeholder="gene.Refgene" maxlength="200">
                    <button id="searchGeneRefGeneBtn" class="btn btn-outline-primary col-5 strong">Search
                      geneRef</button>
                  </div>
                </div>
              </form>
              <h5 class="mt-4"><strong>The number of the entries in the in-house db: <%= numberOfDbEntries %> </strong></h5>
              <% if (searched) { %>
              <h6 class="text-warning mt-3 strong"> The searched category has been: <em>"<%= searchedCategory %>"</em></h6>
              <h6 class="text-warning mt-3 strong"> The searched expression has been: <em>"<%= searchedExp%>"</em></h6>
              <h6 class="text-warning mt-3 strong"> The number of found positions: <%= numberOfFoundPositions %></h6>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
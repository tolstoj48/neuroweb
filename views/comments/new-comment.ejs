<% layout("layouts/index") %>
  <div class="row justify-content-center">
    <div class="col-10">
      <form class="mt-3 needs-validation" novalidate action="/ngs-com/new-comment" method="POST">
        <fieldset>
          <legend>Create a new comment</legend>
          <div class="form-group">
            <label for="name" class="form-label mt-4">Name:</label>
            <input class="form-control" id="name" name="name" placeholder="The name of the comment...">
          </div>
          <div class="form-group">
            <label for="content" class="form-label mt-3">Description:</label>
            <textarea class="form-control" id="content" name="content"
              placeholder="The description of the comment..." rows="10" maxlength="10000"></textarea>
          </div>
        </fieldset>
        <div class="row justify-content-center">
          <a id="backBtn" class="btn btn-lg btn-outline-warning strong mt-3 mb-3 me-4 col-5" href="/ngs-com">Back without
            changes</a>
          <button id="submitBtn" class="btn btn-lg btn-outline-success strong mt-3 mb-3 col-5">Save the comment</button>
        </div>
      </form>
    </div>
  </div>